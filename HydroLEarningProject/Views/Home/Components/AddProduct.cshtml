
@model HydroLearningProject.Views.Home.Components.AddProduct


<form class="p-4"  method="post" on:submit="@(() => Model.Add())" >
    <div class="mb-4">
        <h2 class="text-xl mb-3 font-bold">Add Product</h2>

        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Name</label>
                    <input asp-for="Name" class="form-control" bind:change/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Code" class="form-label">Code</label>
                    <input asp-for="Code" class="form-control" bind:change/>
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="Price" class="form-label">Price</label>
                    <input asp-for="Price" class="form-control" bind:change />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Tax" class="form-label">Tax (%)</label>
                    <input asp-for="Tax" class="form-control" bind:change />
                    <span asp-validation-for="Tax" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex gap-2">
        <button class="btn btn-primary" type="submit">
            Save Changes
        </button>
        <button class="btn btn-secondary" on:click="@(() => Model.Reset())" type="reset">Reset</button>
    </div>
</form>
