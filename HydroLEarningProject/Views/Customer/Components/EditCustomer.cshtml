@model HydroLearningProject.Views.Customer.Components.EditCustomer


<form class="p-4" method="post" on:submit="@(() => Model.Save())">
    <div class="mb-4">
        <h2 class="text-xl mb-3 font-bold">Edit Customer</h2>

        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Name</label>
                    <input asp-for="Name" class="form-control" bind:change />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Address" class="form-label">Address</label>
                    <input asp-for="Address" class="form-control" bind:change />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="City" class="form-label">City</label>
                    <input asp-for="City" class="form-control" bind:change />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Country" class="form-label">Country</label>
                    <input asp-for="Country" class="form-control" bind:change />
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex gap-2">
        <button class="btn btn-primary" type="submit">
            Save Changes
        </button>
        <button class="btn btn-secondary" on:click="@(() => Model.Reset())" type="reset">Reset</button>
    </div>
</form>
